{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    // "mapRoot": "http://devnode.sourcemap.weixin.qq.com:8090/app",
    // "sourceRoot":"http://devnode.sourcemap.weixin.qq.com:8090/node",
    "outDir": "app",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata":true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*",
        "protobuf/@types/*"
      ]
    }
  },
  "include": [
    "node/**/*"
  ],
  "exclude": [
    "./node_modules/*",
    "./client/**/*",
    "script/*"
  ]
}

{
  "compilerOptions": {
      "outDir": "app",
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "module": "es2015",
      "moduleResolution": "node",
      "target": "es5"
  },
  "include": [
    "node/**/*"
  ],
  "exclude": [
    "./node_modules/*",
    "./client/**/*",
    "script/*"
  ]
}